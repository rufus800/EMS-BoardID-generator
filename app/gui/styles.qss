QWidget {
    font-family: Arial, sans-serif;
    font-size: 14px;
}

QLineEdit, QPushButton, QTextEdit {
    padding: 5px;
    margin: 5px;
}

QPushButton {
    background-color: #4CAF50;
    color: white;
    border: none;
    padding: 8px 16px;
}

QPushButton:hover {
    background-color: #45a049;
}

QTableWidget {
    border: 1px solid #ddd;
}

QTableWidget::item {
    padding: 5px;
}

QLabel {
    font-weight: bold;
}